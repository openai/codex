    "servers": [
      {
        "name": "codex",
        "command": "codex",
        "args": ["mcp-server"],
        "description": "Codex v0.48.0 - ClaudeCode-surpassing features",
        "capabilities": [
          "code-review",
          "security-audit", 
          "test-generation",
          "deep-research",
          "auto-orchestration",
          "webhook-integration",
          "natural-language-cli"
