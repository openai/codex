---
language: C
cInterop: true
package: ai.solace.coder.exec.sandbox
headers:
  - linux/landlock.h
  - linux/prctl.h
  - sys/syscall.h
  -unistd.h
---

// Landlock ABI constants
const int LANDLOCK_ABI_VERSION = 4;

// Landlock rule types
enum landlock_rule_type {
    LANDLOCK_RULE_PATH_BENEATH = 1,
    LANDLOCK_RULE_NET_PORT = 2,
};

// Landlock path access rights
enum landlock_path_beneath_attr_type {
    LANDLOCK_PATH_BENEATH_ATTR_TYPE_NONE = 0,
    LANDLOCK_PATH_BENEATH_ATTR_TYPE_PATH_BENEATH = 1,
};

// Landlock access rights
#define LANDLOCK_ACCESS_FS_EXECUTE    (1ULL << 0)
#define LANDLOCK_ACCESS_FS_WRITE_FILE  (1ULL << 1)
#define LANDLOCK_ACCESS_FS_READ_FILE   (1ULL << 2)
#define LANDLOCK_ACCESS_FS_READ_DIR    (1ULL << 3)
#define LANDLOCK_ACCESS_FS_REMOVE_DIR  (1ULL << 4)
#define LANDLOCK_ACCESS_FS_REMOVE_FILE (1ULL << 5)
#define LANDLOCK_ACCESS_FS_MAKE_CHAR   (1ULL << 6)
#define LANDLOCK_ACCESS_FS_MAKE_DIR    (1ULL << 7)
#define LANDLOCK_ACCESS_FS_MAKE_REG    (1ULL << 8)
#define LANDLOCK_ACCESS_FS_MAKE_SOCK   (1ULL << 9)
#define LANDLOCK_ACCESS FS_MAKE_FIFO   (1ULL << 10)
#define LANDLOCK_ACCESS_FS_MAKE_BLOCK  (1ULL << 11)
#define LANDLOCK_ACCESS_FS_MAKE_SYM    (1ULL << 12)
#define LANDLOCK_ACCESS_FS_REFER       (1ULL << 13)
#define LANDLOCK_ACCESS_FS_TRUNCATE    (1ULL << 14)

// Landlock network access rights
#define LANDLOCK_ACCESS_NET_BIND_TCP   (1ULL << 0)
#define LANDLOCK_ACCESS_NET_CONNECT_TCP (1ULL << 1)

// Landlock path_beneath attribute structure
struct landlock_path_beneath_attr {
    __u64 allowed_access;
    enum landlock_path_beneath_attr_type type;
    union {
        __u64 parent_fd;
    };
};

// Landlock ruleset attribute structure
struct landlock_ruleset_attr {
    __u64 handled_access_fs;
    __u64 handled_access_net;
};

// Landlock function prototypes
int landlock_create_ruleset(
    const struct landlock_ruleset_attr *attr,
    size_t size,
    __u32 flags
);

int landlock_add_rule(
    int ruleset_fd,
    enum landlock_rule_type rule_type,
    const void *rule_attr,
    __u32 flags
);

int landlock_restrict_self(
    int ruleset_fd,
    __u32 flags
);

// Helper functions for Kotlin interop
int landlock_create_ruleset_simple(__u64 fs_access, __u64 net_access);
int landlock_add_path_rule(int ruleset_fd, int parent_fd, const char *path, __u64 access);
int landlock_apply_ruleset(int ruleset_fd);