load("@crates//:defs.bzl", "all_crate_deps")
load("@rules_rust//rust:defs.bzl", "rust_binary", "rust_library", "rust_test")
package(default_visibility = ["//visibility:public"])
_DEPS = all_crate_deps(normal = True)
_PROC_MACRO_DEPS = all_crate_deps(proc_macro = True)
_DEV_DEPS = all_crate_deps(normal_dev = True)
_DEV_PROC_MACRO_DEPS = all_crate_deps(proc_macro_dev = True)







rust_library(
    name = "stdio-to-uds",
    crate_name = "codex_stdio_to_uds",
    deps = _DEPS,
    proc_macro_deps = _PROC_MACRO_DEPS,
    srcs = glob(["src/**/*.rs"]),
)

rust_binary(
    name = "codex-stdio-to-uds",
    crate_name = "codex_stdio_to_uds",
    deps = [":stdio-to-uds"] + _DEPS,
    proc_macro_deps = _PROC_MACRO_DEPS,
    srcs = glob(["src/**/*.rs"]),
)

rust_test(
    name = "stdio-to-uds-tests",
    crate = ":stdio-to-uds",
    deps = _DEV_DEPS,
    proc_macro_deps = _PROC_MACRO_DEPS + _DEV_PROC_MACRO_DEPS,
)


rust_test(
    name = "stdio-to-uds-integration-tests",
    crate_root = "tests/stdio_to_uds.rs",
    srcs = glob(["tests/**/*.rs"]),
    data = glob(["tests/**"]) + [":codex-stdio-to-uds"],
    deps = [":stdio-to-uds"] + _DEPS + _DEV_DEPS,
    proc_macro_deps = _PROC_MACRO_DEPS + _DEV_PROC_MACRO_DEPS,
    env = {
        "CARGO_BIN_EXE_codex-stdio-to-uds": "$(rootpath :codex-stdio-to-uds)",
        "CARGO_BIN_EXE_codex_stdio_to_uds": "$(rootpath :codex-stdio-to-uds)",
    },
)
