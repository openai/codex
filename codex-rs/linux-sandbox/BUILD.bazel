load("@crates//:defs.bzl", "all_crate_deps")
load("@rules_rust//rust:defs.bzl", "rust_binary", "rust_library", "rust_test")
package(default_visibility = ["//visibility:public"])
_DEPS = all_crate_deps(normal = True)
_PROC_MACRO_DEPS = all_crate_deps(proc_macro = True)
_DEV_DEPS = all_crate_deps(normal_dev = True)
_DEV_PROC_MACRO_DEPS = all_crate_deps(proc_macro_dev = True)







rust_library(
    name = "linux-sandbox",
    crate_name = "codex_linux_sandbox",
    deps = _DEPS,
    proc_macro_deps = _PROC_MACRO_DEPS,
    srcs = glob(["src/**/*.rs"]),
)

rust_binary(
    name = "codex-linux-sandbox",
    crate_name = "codex_linux_sandbox",
    deps = [":linux-sandbox"]  + _DEPS,
    proc_macro_deps = _PROC_MACRO_DEPS,
    srcs = glob(["src/**/*.rs"]),
)

rust_test(
    name = "linux-sandbox-tests",
    crate = ":linux-sandbox",
    deps = _DEV_DEPS,
    proc_macro_deps = _PROC_MACRO_DEPS + _DEV_PROC_MACRO_DEPS,
)


rust_test(
    name = "linux-sandbox-integration-tests",
    crate_root = "tests/all.rs",
    srcs = glob(["tests/**/*.rs"]),
    data = glob(["tests/**"]) + [":codex-linux-sandbox"],
    deps = [":linux-sandbox"] + _DEPS + _DEV_DEPS,
    proc_macro_deps = _PROC_MACRO_DEPS + _DEV_PROC_MACRO_DEPS,
    env = {"CARGO_BIN_EXE_codex-linux-sandbox": "$(rootpath :codex-linux-sandbox)"},
)
