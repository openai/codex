load("@crates//:defs.bzl", "all_crate_deps")
load("@rules_rust//rust:defs.bzl", "rust_library", "rust_test")
package(default_visibility = ["//visibility:public"])

_DEPS = all_crate_deps(normal = True)
_PROC_MACRO_DEPS = all_crate_deps(proc_macro = True)

rust_library(
    name = "cloud-tasks-client",
    crate_name = "codex_cloud_tasks_client",
    crate_features = [
        "mock",
        "online",
    ],
    deps = _DEPS,
    proc_macro_deps = _PROC_MACRO_DEPS,
    srcs = glob(["src/**/*.rs"]),
)

rust_test(
    name = "cloud-tasks-client-tests",
    crate = ":cloud-tasks-client",
    deps = all_crate_deps(normal_dev = True),
    proc_macro_deps = all_crate_deps(proc_macro_dev = True),
)
